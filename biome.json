{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"suspicious": {
				"noImplicitAnyLet": "warn",
				"noDuplicateObjectKeys": "warn"
			},
			"performance": {
				"noDelete": "error"
			},
			"complexity": {
				"noUselessSwitchCase": "warn",
				"noUselessTypeConstraint": "warn"
			},
			"correctness": {
				"noUnusedImports": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"files": {
		"ignore": [
			"dist",
			".next",
			".svelte-kit",
			"package.json",
			".contentlayer",
			".turbo",
			".source",
			".expo",
			".cache"
		]
	}
}
